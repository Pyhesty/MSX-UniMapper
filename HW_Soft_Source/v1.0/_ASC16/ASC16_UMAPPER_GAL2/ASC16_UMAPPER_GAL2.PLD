/*                        ASC16 UMAPPER GAL 2                          */
/* *************** INPUT PINS *********************/
PIN  1  = CLK                     ; /* clock ~3.5Mhz                   */ 
PIN  2  = nSTSL                   ; /* slot  select low-active         */ 
PIN  3  = nWE                     ; /* write select low-active         */ 
PIN  4  = nReset                  ; /* reset select low-active         */ 
PIN  5  = A15                     ; /* adrress bit 15                  */ 
PIN  6  = A14                     ; /* adrress bit 14    unuse         */ 
PIN  7  = A13                     ; /* adrress bit 13    unuse         */ 
PIN  8  = di2                     ; /* page number bit 2               */ 
PIN  9  = di5                     ; /* page number bit 5               */ 
PIN 10  = di4                     ; /* page number bit 4               */ 
PIN 11  = di3                     ; /* page number bit 3               */ 
PIN 13  = A12                     ; /* adrress bit 12                  */ 


/* *************** OUTPUT PINS *********************/
PIN 14  = d30                     ; /* MA16_0                          */ 
PIN 15  = d31                     ; /* MA16_1                          */ 
PIN 16  = d32                     ; /* unuse                           */ 
PIN 17  = d40                     ; /* MA17_0                          */ 
PIN 18  = d41                     ; /* MA17_1                          */ 
PIN 19  = d42                     ; /* unuse                           */ 
PIN 20  = d52                     ; /* unuse  (MA17_0 sch)             */ 
PIN 21  = test                    ; /* !nWE#!nSTSL                     */ 
PIN 22  = d50                     ; /* MA18_0 (MA16_0 sch)             */ 
PIN 23  = d51                     ; /* MA18_1 (MA14_0 sch)             */ 

d30.d =  nReset&(((!nWE&!nSTSL)&!A15&A14&A13&!A12&di2)#((nWE#nSTSL)&d30)#((!nWE&!nSTSL)&(A12#!A13#!A14#A15)&d30)); /* 3 - page bit 0 */
d31.d =  nReset&(((!nWE&!nSTSL)&!A15&A14&A13&A12&di2)#((nWE#nSTSL)&d31)#((!nWE&!nSTSL)&(!A12#!A13#!A14#A15)&d31)); /* 3 - page bit 1 */
d40.d =  nReset&(((!nWE&!nSTSL)&!A15&A14&A13&!A12&di3)#((nWE#nSTSL)&d40)#((!nWE&!nSTSL)&(A12#!A13#!A14#A15)&d40)); /* 4 - page bit 0 */
d41.d =  nReset&(((!nWE&!nSTSL)&!A15&A14&A13&A12&di3)#((nWE#nSTSL)&d41)#((!nWE&!nSTSL)&(!A12#!A13#!A14#A15)&d41)); /* 4 - page bit 1 */
d50.d =  'b'0;  /* nReset&(((!nWE&!nSTSL)&!A15&A14&A13&!A12&di4)#((nWE#nSTSL)&d50)#((!nWE&!nSTSL)&(A12#!A13#!A14#A15)&d50));*/ /* 0 - page bit 4 */
d51.d =  nReset&(((!nWE&!nSTSL)&!A15&A14&A13&A12&di4)#((nWE#nSTSL)&d51)#((!nWE&!nSTSL)&(!A12#!A13#!A14#A15)&d51)); /* 5 - page bit 1 */

test = !nWE#!nSTSL;

